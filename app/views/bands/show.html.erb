<h1 class="view__heading"><%= @band.name %></h1>


<h3 class="view__heading">Albums</h3>

<div class="view__container">
    <% @band.albums.each do |album| %>
        <a class="view__link" href="<%= album_url(album.id) %>"><%= album.title %></a>
        <br>
    <% end %>

    <br>

    <a class="view__link" href="<%= new_band_album_url(@band.id)%>">Add Album</a>
</div>

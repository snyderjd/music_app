<h1 class="view__heading">Create New Band</h1>

<div class="view__container">
    <form action="<%= bands_url %>" method="POST">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">

        <label for="band_name">Name</label>
        <input type="text" id="band_name" name="band[name]">
        <br>

        <input type="submit" value="Create Band">
    </form>
</div>
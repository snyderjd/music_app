<h1 class="view__heading">Album: <%= @album.title %></h1>

<div class="view__container">
    <table class="view__table">
        <tr>
            <th>Band</th>
            <td><%= @album.band.name %></td>
        </tr>
        <tr>
            <th>Year</th>
            <td><%= @album.year %></td>
        </tr>
        <tr>
            <th>Live?</th>
            <td><%= @album.is_live ? "Yes" : "No" %></td>
        </tr>
    </table>
    <br>

    <h2 class="view__heading">Tracks</h2>

    <% @album.tracks.each do |track| %>
        <a class="view__link" href="<%= track_url(track.id)%>"><%= track.title %></a>
        <br>
    <% end %>

    <a class="view__link" href="<%= new_album_track_url(@album.id) %>">Add Track</a>
    <br>

    <a class="view__link" href="<%= band_url(@album.band_id) %>">Back</a>

    <a class="view__link" href="<%= edit_album_url(@album.id) %>">Edit Album</a>

    <a class="view__link" href="<%= album_url(@album.id) %>" data-method="DELETE">Delete Album</a>

</div>

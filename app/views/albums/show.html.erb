<h3>Album: <%= @album.title %></h1>

<table>
    <tr>
        <th>Band</th>
        <td><%= @album.band.name %></td>
    </tr>
    <tr>
        <th>Year</th>
        <td><%= @album.year %></td>
    </tr>
    <tr>
        <th>Live?</th>
        <td><%= @album.is_live ? "Yes" : "No" %></td>
    </tr>
</table>
<br>

<h3>Tracks</h3>

<% @album.tracks.each do |track| %>
    <a href="<%= track_url(track.id)%>"><%= track.title %></a>
    <br>
<% end %>

<a href="<%= band_url(@album.band_id) %>">Back</a>

<a href="<%= edit_album_url(@album.id) %>">Edit Album</a>

<a href="<%= album_url(@album.id) %>" data-method="DELETE">Delete Album</a>


